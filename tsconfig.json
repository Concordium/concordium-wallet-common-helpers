{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["dom", "esnext", "webworker"],
        "jsx": "react",
        "baseUrl": ".",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./lib"
    }
}
