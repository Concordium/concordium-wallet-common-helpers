{
    "name": "wallet-common-helpers",
    "version": "1.5.0",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "postinstall": "tsc",
        "build": "tsc",
        "lint": "eslint . --cache --ext .ts,.tsx --max-warnings 0",
        "lint-fix": "yarn --silent lint --fix; exit 0",
        "test": "jest"
    },
    "packageManager": "yarn@3.2.0",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": ["eslint --cache --fix"],
        "{*.json,.{eslintrc,prettierrc,stylelintrc}}": [
            "prettier --ignore-path .eslintignore --parser json --write"
        ],
        "*.{css,scss}": [
            "stylelint --ignore-path .eslintignore --syntax scss --fix"
        ],
        "*.{html,md,yml}": [
            "prettier --ignore-path .eslintignore --single-quote --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Concordium/wallet-common-helpers"
    },
    "author": {
        "name": "Concordium Software",
        "email": "support@concordium.software",
        "url": "https://concordium.com"
    },
    "devDependencies": {
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.17.12",
        "@babel/plugin-proposal-optional-chaining": "^7.17.12",
        "@types/bs58check": "^2.1.0",
        "@types/jest": "^28.1.3",
        "@types/react": "^16.9.44",
        "@types/react-datepicker": "^4.1.7",
        "@types/react-dom": "^16.9.9",
        "@types/react-redux": "^7.1.9",
        "@types/react-router": "^5.1.8",
        "@types/react-router-dom": "^5.1.5",
        "@types/react-test-renderer": "^16.9.3",
        "@types/react-virtualized-auto-sizer": "^1.0.1",
        "@types/react-window": "^1.8.5",
        "@types/react-window-infinite-loader": "^1.0.5",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "cross-env": "^7.0.2",
        "eslint": "^7.5.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "eslint-config-erb": "^2.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-import-resolver-webpack": "^0.12.2",
        "eslint-plugin-compat": "^3.8.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.18.0",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.0.8",
        "eslint-plugin-testcafe": "^0.2.1",
        "husky": "^4.2.5",
        "jest": "^26.6.3",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "ts-jest": "^26.5.0"
    },
    "dependencies": {
        "@concordium/common-sdk": "^2.3.2",
        "buffer": "^6.0.3",
        "cbor": "^8.0.0",
        "clsx": "^1.1.1",
        "qrcode.react": "^3.1.0",
        "typescript": "4"
    },
    "devEngines": {
        "node": ">=14.x",
        "npm": ">=6.x",
        "yarn": ">=1.x"
    },
    "browserslist": [],
    "prettier": {
        "overrides": [
            {
                "files": [".prettierrc", ".eslintrc", ".stylelintrc"],
                "options": {
                    "parser": "json"
                }
            }
        ],
        "singleQuote": true,
        "tabWidth": 4
    },
    "renovate": {
        "extends": ["bliss"],
        "baseBranches": ["next"]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "peerDependencies": {
        "react": ">=16",
        "react-dom": ">=16"
    }
}
